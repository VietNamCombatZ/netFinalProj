@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml"; // hoặc null nếu bạn chưa có Layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Welcome to SciPost</h2>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle fs-3 me-2"></i>
                <span>@User.Identity.Name</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="@Url.Action("Profile", "Users")"><i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Logout", "Users")"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
            </ul>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <a href="@Url.Action("Create", "Articles")" class="btn btn-success w-100 py-3">
                <i class="bi bi-plus-circle me-2"></i>Thêm bài viết
            </a>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("MyArticles", "Articles")" class="btn btn-primary w-100 py-3">
                <i class="bi bi-journal-text me-2"></i>Xem tất cả bài viết
            </a>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

